`timescale 1 ps/ 1 ps
module pulseGenerator_vlg_sample_tst(
	clock,
	duty_add,
	duty_sub,
	frequency_add,
	frequency_sub,
	reset,
	sampler_tx
);
input  clock;
input  duty_add;
input  duty_sub;
input  frequency_add;
input  frequency_sub;
input  reset;
output sampler_tx;

reg sample;
time current_time;
always @(clock or duty_add or duty_sub or frequency_add or frequency_sub or reset)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module pulseGenerator_vlg_check_tst (
	fout,
	sampler_rx
);
input  fout;
input sampler_rx;

reg  fout_expected;

reg  fout_prev;

reg  fout_expected_prev;

reg  last_fout_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	fout_prev = fout;
end

// update expected /o prevs

always @(trigger)
begin
	fout_expected_prev = fout_expected;
end



// expected fout
initial
begin
	fout_expected = 1'bX;
end 
// generate trigger
always @(fout_expected or fout)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected fout = %b | ",fout_expected_prev);
	$display("| real fout = %b | ",fout_prev);
`endif
	if (
		( fout_expected_prev !== 1'bx ) && ( fout_prev !== fout_expected_prev )
		&& ((fout_expected_prev !== last_fout_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port fout :: @time = %t",  $realtime);
		$display ("     Expected value = %b", fout_expected_prev);
		$display ("     Real value = %b", fout_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_fout_exp = fout_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

